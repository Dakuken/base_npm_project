{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/no-extraneous-dependencies": 0, // pour les imports
        "max-len": 0, // logique
        "import/no-unresolved": 0, // erreur import dans mes fichiers
        "import/extensions": 0, // parce qu'on mets pas les extension Ã  la fin du fichier
        "no-param-reassign": 0, // pouvoir reassigner les variable (c'est cool en vrai)
        "no-plusplus": 0, //pouvoir laisser les "++"
        "indent": [
            "error",
            4
        ], // nb espace par indent (j'adore 4)
        "max-classes-per-file": [
            "error",
            1
        ], // max de classe par fichier
        "no-console": "off", // a remove pour les console.log()
        "linebreak-style": 0, //empecher le bug quand on change de linux/ window
        "class-methods-use-this": 0, // laisser les this normaux
        "space-unary-ops": [
            0,
            {
                "words": true,
                "nonwords": true,
                "overrides": {
                    "new": true,
                    "++": true
                }
            }
        ] // espace dans les calcul
    }
}